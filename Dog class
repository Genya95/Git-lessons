package ru.geekbrains.lesson6;

public class Dog extends Animal {
    String name;
    int age;

    @Override
    public void runInfo() {
        System.out.println(name + " " + "пробежала" + " " + runDistance + " "+ "метров");
    }

    @Override
    public void swimInfo() {
        System.out.println(name + " " + "проплыла" + " " + swimDistance + " "+ "метров");
    }

    public Dog(String name, int age, int runDistance, int swimDistance) {
        super(runDistance, swimDistance);
        this.name = name;
        if (runDistance > 500) {
            System.out.println("Ошибка! Собаки могут пробежать не более 500 метров!");
        } else {
            runInfo();
        }
        if (swimDistance > 10) {
            System.out.println("Ошибка! Собаки могут проплыть не более 10 метров!");
        } else {
            swimInfo();
        }
    }
}